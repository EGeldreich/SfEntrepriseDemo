{% extends 'base.html.twig' %}

{% block title %}Détail d'un entreprise{% endblock %}

{% block body %}

    <h1>Détail d'un entreprise</h1>

    <h2>{{ entreprise }}</h2>

    <p>
        Adresse : {{ entreprise.adresseComplete}}
    </p>
    <p>
        Création : {{ entreprise.dateCreation | date("d/m/Y")}}
    </p>

    <h3>Liste des salariés</h3>
    {% if entreprise.employes | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Employé</th>
                </tr>
            </thead>
            <tbody>
                {% for employe in entreprise.employes %}
                    <tr>
                        <td>
                            <a href="{{ path('show_employe', {'id' : employe.id })}}">{{ employe }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>
        {% else %}
            <p>Aucun employé dans cette entreprise</p>
    {% endif %}
{% endblock %}
